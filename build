#!/bin/sh
# This script is only used for developement. It is removed by the 
# distribution process. 

set -e

OCAMLBUILD=${OCAMLBUILD:="ocamlbuild -tag debug -classic-display \
                          -use-ocamlfind"}

action () 
{
    case $1 in
      default)      $OCAMLBUILD vg.cmx vgr_pdf.cmx vgr_svg.cmx vgr_htmlc.cmx ;;
      tests)        $OCAMLBUILD rpdf.native rsvg.native; action rhtmlc ;;
      rhtmlc)       shift; 
                    pkg/db-locs
                    pkg/jsoo-build $* test/rhtmlc.ml
                    ;;
      sqc)          shift; pkg/jsoo-build $* test/sqc.ml ;;
      min_htmlc)    shift; pkg/jsoo-build $* test/min_htmlc.ml ;;
      doc)          shift; pkg/pkg-doc $* doc/dev-api.docdir ;;
      api-doc)      shift; pkg/pkg-doc $* doc/api.docdir ;;
      distrib)      pkg/pkg-distrib ;;
      publish)      pkg/pkg-www ;;
      publish-demos) shift; 
                    action rhtmlc
                    action jsoo test/sqc.ml
                    pkg/pkg-www-demos 
                    ;;
      publish-opam) pkg/pkg-opam ;;
      clean)        $OCAMLBUILD -clean ;;
      jsoo)         shift; pkg/jsoo-build $* ;;
      *)            $OCAMLBUILD $* ;;
    esac
} 

if [ $# -eq 0 ]; 
then action default ; 
else action $*; fi
